@using FinalProject.Models

@{ 
    Admin admin = (Admin)Session["Loginner"];
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Grexsan - Admin Dashboard Template</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Areas/AdminPanel/assets/css/app.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Areas/AdminPanel/assets/css/style.css">
    <link rel="stylesheet" href="~/Areas/AdminPanel/assets/css/components.css">
    <!-- Custom style CSS -->

    <link rel='shortcut icon' type='image/x-icon' href='~/Areas/AdminPanel/assets/img/favicon.ico' />
</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <div class="form-inline mr-auto"></div>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown ">
                        <a href="#" data-toggle="dropdown"
                           class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <img alt="image" src="~/Uploads/@admin.Image" class="user-img-radious-style">
                            <span class="d-sm-none d-lg-inline-block"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-title">@(admin!=null? admin.Name+ " "+ admin.Surname:"")</div>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout","Home")" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="@Url.Action("Index","Home")">
                            <img alt="image" src="~/Areas/AdminPanel/assets/img/logo.png" class="header-logo" />
                            <span class="logo-name">Grexsan</span>
                        </a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="dropdown active" style="display: block;">
                            <div class="sidebar-profile">
                                <div class="siderbar-profile-pic">
                                    <img src="~/Uploads/@admin.Image" class="profile-img-circle box-center" alt="User Image">
                                </div>
                                <div class="siderbar-profile-details">
                                    <div class="siderbar-profile-name">@(admin!=null? admin.Name+ " "+ admin.Surname:"")</div>
                                    <div class="siderbar-profile-position">Admin </div>
                                </div>
                                <div class="sidebar-profile-buttons">
                                    <a class="tooltips waves-effect waves-block" href="@Url.Action("Logout","Home")" data-toggle="tooltip" title="" data-original-title="Logout">
                                        <i class="fas fa-share-square sidebarQuickIcon"></i>
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li class="menu-header">Pages</li>
                      
                        <li class="dropdown active">
                            @*<a href="#" class="nav-link has-dropdown toggle"><i class="fas fa-meteor"></i><span>Required Pages</span></a>*@
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" href="@Url.Action("Index","Admin")">Admin</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Address")">Address</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Accordion")">Accordion</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","BlogCategory")">Blog Category</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Blog")">Blog</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Galery")">Galery</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","InstaFeed")">InstaFeed</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Menu")">Menu</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","MenuCategory")">Menu Category</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Message")">Message</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","WeAreVincent")">We are Vincent</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","User")">User</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Team")">Team</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Tag")">Tag</a></li>
                                <li><a class="nav-link" href="@Url.Action("Subscribe","Home")">Subscribe</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Slider")">Slider</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Settings")">Settings</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Reviews")">Reviews</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Reservation")">Reservation</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Position")">Position</a></li>
                                <li><a class="nav-link" href="@Url.Action("Index","Order")">Order</a></li>



                            </ul>
                        </li>
                      
                    </ul>
                </aside>
            </div>
            <!-- Main Content -->

            <div class="main-content">
                @RenderBody()

            </div>
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright &copy; 2020 <div class="bullet"></div> Design By <a href="#">Snkthemes</a>
                </div>
                <div class="footer-right">
                </div>
            </footer>
        </div>
    </div>
    <!-- General JS Scripts -->
    <script src="~/Areas/AdminPanel/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/Areas/AdminPanel/assets/js/scripts.js"></script>
    <script src="~/Areas/AdminPanel/assets/bundles/jquery.sparkline.min.js"></script>
    <script src="~/Areas/AdminPanel/assets/js/main.js"></script>
    @RenderSection("CK", required: false);
</body>


</html>
