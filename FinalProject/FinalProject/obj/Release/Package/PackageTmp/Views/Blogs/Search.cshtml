@model List<FinalProject.Models.Blog>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <section id="vincentTitle">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="innerText">
                        <h1>Search results</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="blogItems">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-sm-6 col-md-6 col-xs-6">
                        <div class="blogs">
                            <h4>
                                <a href="@Url.Action("Detail", "Blogs", new { Id = item.Id })">@item.Title</a>
                            </h4>
                            <p class="category">@item.BlogCategory.Name</p>
                            <p class="publisedDate">@item.CreatedDate.ToString("MMMM dd, yyyy")</p>
                            <p class="author">@item.Author</p>
                            <p class="commentsCount">0 comments</p>
                            <img src="~/Uploads/@item.Image" alt="">
                        </div>
                    </div>
                }


            </div>
            <div class="row customRow">
                <div class="col-lg-12">
                    <div class="pageNav">
                        <a class="prev" href="#"><i class="fas fa-angle-double-left"></i></a>
                        <a class="page default" href="#">1</a>
                        <a class="page" href="#">2</a>
                        <a class="page" href="#">3</a>
                        <a class="next" href="#"><i class="fas fa-angle-double-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="goTopBtn">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="goTop">
                        <i class="fas fa-chevron-up animate heartBeat"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

