                </div>
                <div class="col-lg-7 col-md-7 col-sm-7">
                    <div class="menuList">
                        <ul>
                            @foreach (var item in Model.Take(8))
                            {
                            <li>
                                <div class="listItems">
                                    <a href="@Url.Action("Details","Menu",new { Id=item.Id})">
                                        <h1>
                                            <span class="diff">@item.Name</span>
                                            <span class="price">$@item.Price</span>
                                        </h1>
                                        <div class="dots"></div>
                                        <p>@(item.Description.Length>50 ? item.Description.Substring(0,50) :item.Description)</p>
                                    </a>
                                </div>
                            </li>
                            }
                        </ul>
