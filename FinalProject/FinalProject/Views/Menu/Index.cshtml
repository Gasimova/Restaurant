            </div>
        </div>
    </section>

    <section id="discover">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ourMenu">
                        <h1>DISCOVER OUR MENU</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="menuList">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="list">
                        <ul>
                            @foreach (var item in ViewBag.MenuCategory)
                            {
                                <li> <a data-id="@item.Id" class="menuCat" href="#">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container productList">
            <div class="row customRow">
                @foreach (var item in Model.OrderBy(o=>o.MenuCategoryId).Take(6))
                {
                    <div class="col-lg-6 col-md-6">
                        <div class="listItem">
                            <div class="image">
                                <a href="@Url.Action("Details","Menu", new { Id=item.Id})" > <img src="~/Uploads/@item.Image" alt="Alternate Text" /> </a>
                                <div class="overlay">
                                    <div class="cartIcon"></div>
                                    <div class="bagIcon">
                                        <a class="addtoCart" data-id="@item.Id" href=""><i class="fas fa-shopping-bag"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="info">
                                <a href="@Url.Action("Details","Menu", new { Id=item.Id})"><h5 class="itemName" data-id="@item.MenuCategory.Id">@item.Name</h5></a>
                                <p>
                                   @(item.Description.Length>50 ? item.Description.Substring(0,50): item.Description)
                                </p>
                                <span class="price">$@item.Price</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
